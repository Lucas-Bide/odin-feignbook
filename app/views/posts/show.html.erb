<h1><%= @post.title %></h1>
<%= link_to_if(@post.author == current_user, 'Edit', edit_post_path(@post)) { '' } %>
<div><%= @post.body %></div>
<div>
  <p>Make a Comment</p>
  <%= form_with url: post_comments_url(@post), method: 'post' do |f| %>
    <%= f.text_area :body %><br />
    <%= f.submit 'Comment' %>
  <% end %>
</div>
<%= render 'post_comments', locals: { post: @post } %>